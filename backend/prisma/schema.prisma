generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String    @id @default(cuid())
  email             String    @unique
  password          String
  name              String?
  firstName         String?
  lastName          String?
  phone             String?
  bio               String?
  job               String?
  country           String?
  city              String?
  postalCode        String?
  birthday          String?
  avatar            String?
  role              String?   @default("user")
  createdAt         DateTime  @default(now())
  
  // Paramètres utilisateur
  emailNotifications Boolean? @default(true)
  pushNotifications  Boolean? @default(true)
  marketingEmails    Boolean? @default(false)
  securityAlerts     Boolean? @default(true)
  
  // Réseaux sociaux
  facebook          String?
  twitter           String?
  instagram         String?
  linkedin          String?
}

model Fan {
  id             String  @id @default(cuid())
  nom            String
  initiale       String?
  urlAvatar      String?
  statut         String
  derniereActivite DateTime?
  totalDepense   Float?  @default(0)
}

model Contenu {
  id       String @id @default(cuid())
  titre    String
  urlImage String
  prix     Float
}

model Image {
  id           Int    @id @default(autoincrement())
  url          String
  price        String
  versionTag   String?
  versionColor String?
}

model Message {
  id        String   @id @default(cuid())
  fromId    String
  toId      String
  content   String
  createdAt DateTime @default(now())
}
