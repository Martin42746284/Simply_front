{
  "builds": [
    {
      "src": "backend/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "index.html",
      "use": "@vercel/static-build"
    }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/$1.ts" },
    { "src": "/(.*)", "dest": "/" }
  ]
}
