{
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/dist",
  "framework": "vite",
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/$1.ts" },
    { "src": "/(.*)", "dest": "frontend/$1" }
  ],
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs20.x"
    }
  }
}