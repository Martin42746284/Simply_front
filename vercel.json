{
  "builds": [
    { "src": "backend/**/*.ts", "use": "@vercel/node" },
    { "src": "frontend/package.json", "use": "@vercel/static-build" }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "frontend/dist",
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/$1.ts" },
    { "src": "/(.*)", "dest": "frontend/$1" }
  ]
}
